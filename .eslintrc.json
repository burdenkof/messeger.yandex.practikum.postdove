{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "warn",
    "max-len": [
      2,
      100
    ],
    "@typescript-eslint/no-unused-vars": 2
  }
}